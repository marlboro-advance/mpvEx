<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Thin weight (100) -->
    <font
        android:font="@font/google_sans_flex_thin"
        android:fontStyle="normal"
        android:fontWeight="100"
        app:font="@font/google_sans_flex_thin"
        app:fontStyle="normal"
        app:fontWeight="100" />

    <!-- Extra Light weight (200) -->
    <font
        android:font="@font/google_sans_flex_extralight"
        android:fontStyle="normal"
        android:fontWeight="200"
        app:font="@font/google_sans_flex_extralight"
        app:fontStyle="normal"
        app:fontWeight="200" />
        
    <!-- Light weight (300) -->
    <font
        android:font="@font/google_sans_flex_light"
        android:fontStyle="normal"
        android:fontWeight="300"
        app:font="@font/google_sans_flex_light"
        app:fontStyle="normal"
        app:fontWeight="300" />
        
    <!-- Regular weight (400) -->
    <font
        android:font="@font/google_sans_flex_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/google_sans_flex_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />
        
    <!-- Medium weight (500) -->
    <font
        android:font="@font/google_sans_flex_medium"
        android:fontStyle="normal"
        android:fontWeight="500"
        app:font="@font/google_sans_flex_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />
        
    <!-- Bold weight (700) -->
    <font
        android:font="@font/google_sans_flex_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/google_sans_flex_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
        
    <!-- Black weight (900) -->
    <font
        android:font="@font/google_sans_flex_black"
        android:fontStyle="normal"
        android:fontWeight="900"
        app:font="@font/google_sans_flex_black"
        app:fontStyle="normal"
        app:fontWeight="900" />

    <!-- Variable font as fallback for other weights -->
    <font
        android:font="@font/google_sans_flex"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/google_sans_flex"
        app:fontStyle="normal"
        app:fontWeight="400" />
</font-family>

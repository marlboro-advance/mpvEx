<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude all SharedPreferences so settings (e.g., input.conf) are not restored after reinstall -->
        <exclude
            domain="sharedpref"
            path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Also exclude preferences during device-to-device transfer -->
        <exclude
            domain="sharedpref"
            path="." />
    </device-transfer>
</data-extraction-rules>